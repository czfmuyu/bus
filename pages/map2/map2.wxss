/* map2.wxss */
page{
  width:100%;
  height:100%;
}

.apart{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 0.2rpx solid #f0eff5;
  
}

.left{
  width:70%;
  padding: 10rpx 0 20rpx 0;
  overflow: hidden;
}
.busline{
  float:left;
  width:80%;
  display: flex;
  flex-direction: column


}
.right{
  width:30%;

  display: flex;
  flex-direction: row;
  align-items: center
}
.right_box{
  height:80%;
  border-left: 0.2rpx solid #f0eff5;
  display: flex;
  flex-direction: column;

}
.motai_top{
  background: white;
  font-size: 36rpx;
  padding: 30rpx 0 30rpx 0;
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.rotate{
  width:30rpx;
  height:30rpx;
  border-left: 1px solid black;
  border-bottom: 1px solid black;
  position: absolute;
  left: 40rpx;
  top:50%;
  transform:translateY(-15rpx) rotate(45deg);
}
.motai_end{
  background: rgba(0,0,0,0.5);
  color:white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:100%;
}
end1{
  width:80%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  overflow: hidden;
}
end2{
  
  width:600rpx;
}