/* map.wxss */
page{
  width:100%;
  height: 100%;
  background: #f0eff5;
  
}
.search{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #4086ff;
  padding: 20rpx 0 50rpx 0;
  width:100%;
  position: relative;

}
.start{
  padding: 20rpx 0 20rpx 20rpx;
  color: white;
  width:70%;
  background: rgba(255,255,255,0.3);
  font-size: 37rpx;
  border-radius: 6rpx;
}
.end{
  width:70%;
  margin-top:10rpx;
  padding: 20rpx 0 20rpx 20rpx;
  color: white;
   background: rgba(255,255,255,0.3);
   font-size: 37rpx;
   border-radius: 6rpx;
}
.end text2{
  transition: color 500ms ease;
}
.change{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:50%;
  right:30rpx;
  transform: translateY(-30rpx)
} 
.record{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  background: white;
  
  
}
.left{
  padding: 40rpx 40rpx 40rpx 40rpx;
}
.left image{
  width:36rpx;
  height:36rpx;
  
}
.right{
  padding: 40rpx 0 40rpx 0;
  border-bottom: 2rpx solid #ccc;
  width:80%;
}
.right image{
  width:36rpx;
  height:30rpx;
  vertical-align: middle;
  margin: 0 8rpx 0 8rpx
}
.right text{
  vertical-align: middle;
  
}
.remove{
  
  padding:40rpx 0 40rpx 0;
  font-size: 36rpx;
  background: white;
}
.remove text{
  width:100%;
  display: block;
  text-align: center;
  
}
.motai{
  width:100%;
  height:100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.3); 
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}
.motai-center{
  width: 80%;
  height:100rpx;
  line-height: 100rpx;
  background: white;
  text-indent: 50rpx;
  color:red;
  font-size: 36rpx;
}